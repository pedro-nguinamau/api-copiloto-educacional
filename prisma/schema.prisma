
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Aluno {
  id           Int      @id @default(autoincrement())
  nomeCompleto String
  email        String   @unique
  password     String
  classeId     Int?
  cursoId      Int?
  classe       Classe?  @relation(fields: [classeId], references: [id])
  curso        Curso?   @relation(fields: [cursoId], references: [id])
  chat         Chat[]
}

model Classe {
  id           Int         @id @default(autoincrement())
  numeroClasse Int  
  rotulo String       // 1, 2 ou 3 representando os anos do ensino m√©dio
  alunos       Aluno[]
  disciplinas  Disciplina[]
}

model Curso {
  id           Int         @id @default(autoincrement())
  nomeCurso    String
  alunos       Aluno[]
  disciplinas  Disciplina[]
}

model Disciplina {
  id           Int         @id @default(autoincrement())
  nome         String
  cursoId      Int
  classeId     Int
  curso        Curso        @relation(fields: [cursoId], references: [id])
  classe       Classe       @relation(fields: [classeId], references: [id])
  chat         Chat[]
}

model Chat {
  id           Int         @id @default(autoincrement())
  alunoId      Int
  disciplinaId Int
  mensagens    Mensagem[]
  createdAt    DateTime     @default(now())
  aluno        Aluno        @relation(fields: [alunoId], references: [id])
  disciplina   Disciplina   @relation(fields: [disciplinaId], references: [id])
}

model Mensagem {
  id        Int        @id @default(autoincrement())
  chatId    Int
  role      String     // "user" ou "assistant"
  conteudo  String
  createdAt DateTime   @default(now())
  chat      Chat       @relation(fields: [chatId], references: [id])
}

